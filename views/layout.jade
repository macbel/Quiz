doctype html
html
    head
        meta(charset="utf-8")
        title= title
        link(rel='stylesheet',type="text/css", href='/stylesheets/style.css')
        link(rel='stylesheet',type="text/css",
        media="only screen and (min-width: 530px) and (min-device-width: 501px)"
        href='/stylesheets/wide.css')
        link(rel='stylesheet',type="text/css",
        media="only screen and (max-width: 500px)"
        href='/stylesheets/smartphone.css')
    body
        #page-wrap
            header.main(id="h1")
                - if (!session.user){
                    span.right
                        a(href="/login") Login
                - }else{
                    span.right
                        p #{session.user.username}
                        a(href="/logout") Logout
                - }
                h2 QUIZ: el juego de las preguntas
            nav.main(id="n1", role="navigation")
                span
                    a(href="/") Inicio
                span
                    a(href="/quizes") Preguntas
                span
                    a(href="/quizes/temas") Temas
                span
                    a(href="/quizes/statistics") Estadísticas
            #section.main
                - if (errors.length){
                    span(id="ErrorMsgs") Corregir Errores:
                        br
                    -   for (var i in errors)
                            span(id="ErrorMsgs")
                                p #{errors[i].message}
                            br
                -   }
                block content
            footer.main(id="f1")
                span
                    a(href="http://es.wikipedia.org/wiki/quiz") ¿Que es un Quiz?
                span
                    a(href="/author") Autor